extends layout

block content
  div.container-content
    div.welcome-messages-board 
      h1 Welcome to the Message Board! 
      p Here you can post messages, and see who is posting , but to do that you have to be a member, and to become a member you have to enter te secret password.
      br
    div.container-messages
      if (user)
        if (user.isMember)
          div.input-message
            div.img-user
              div.example-image
            form(method="POST" action="").form-message
              input(type="text" name="title-message" placeholder="Title...").title-input 
              input(type="text" name="details-message" placeholder="Details...").details-input
              input(type="submit" value="Submit").submit-input
          div.messages
        else 
          div.messages
            span User but no member
      else 
        span Not user

