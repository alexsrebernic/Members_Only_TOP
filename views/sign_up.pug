extends layout 
block content 
     div.container-content
        div 
            h1 Sign Up
        if (error_message)   
            div.container-error-message
                span(class="error-message")= error_message      
        form(method="POST" action="/sign_up").form-sign-up
            input(type="text" name="username" placeholder="Enter username" required)
            input(type="password" name="password" placeholder="Enter password" required) 
            input(type="password" name="passwordreconfirm" placeholder="Enter password again" required) 
            input(type="submit" value="Sign Up").submit-sign-up